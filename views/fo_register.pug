doctype html
head
  meta(charset='UTF-8')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  link(rel='stylesheet' href='https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css' integrity='sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2' crossorigin='anonymous')
  title Document
.container
  form(method="POST" action='/')
    h4
      span(style='color: chartreuse;') FARMER ONE REGISTRATION FORM
    .form-row
      .form-group.col-md-6
        label(for='inputEmail4') Name:
        input#inputEmail4.form-control(type='text' name='name')
      .form-group.col-md-6
        label(for='ward') Ward:
        input#inputPassword4.form-control(type='text' name='ward')
    .form-row
      .form-group.col-md-6
        label(for='ward duration') Period of stay in the ward:
        input#inputEmail4.form-control(type='text' name='period of stay in the ward')
      .form-group.col-md-6
        label(for='nin') NIN:
        input#inputPassword4.form-control(type='text' name='NIN')
    .form-row
      .form-group.col-md-6
        label(for='inputEmail4')  Birth date
        input#inputEmail4.form-control(type='date' name='birth date')
      .form-group.col-md-6
        label(for='inputPassword4') Registration date
        input#inputPassword4.form-control(type='date' name='registration date')
    .form-row
      .form-group.col-md-6
        label(for='inputAddress')  Home Address 
        input#inputAddress.form-control(type='text' name='home address')
      .form-group.col-md-6
        label(for='Unique id no')  User Name 
        input#inputAddress.form-control(type='text' name='username')
    .form-row
      .form-group.col-md-6
        label(for='inputState') Residence type
        select#inputState.form-control(name='country')
          option(selected='') Choose your Residence type 
          option By birth
          option By descent
          option By immigration
      .form-group.col-md-6
        label(for='inputState') Activities
        select#inputState.form-control(name='country')
          option(selected='') Choose Activities 
          option Gardener
          option Rancher
          option Poultry Keeper
      .form-row
        .form-group.col-md-6
          lable Unique FO number:
          input#phone.form-control(type='text' name='ID')
          #idErr.error
        .form-group.col-md-6
          label(for='Contact') Contact
          input#inputAddress2.form-control(type='text' name='contact')
          br
          br
      .form-row
        .form-group.col-md-6
          lable Gender
          .form-inline
            label
              input(type='radio' name='genger' value='male')
              | Male
            label
              input(type='radio' name='genger' value='female')
              | Female
          .error(name='gengerErr')
        .form-group.col-md-6
          button.btn.btn-primary(type='submit') Register
script(src='https://code.jquery.com/jquery-3.5.1.slim.min.js' integrity='sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj' crossorigin='anonymous')
